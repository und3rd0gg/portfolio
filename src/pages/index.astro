---
import H1 from "../components/h1.astro";
import Link from "../components/link.astro";
import RootLayout from "../layouts/RootLayout.astro";
import WarpBackground from "../components/warp-background";
import AvailableForWork from "../components/available.astro";
---

<RootLayout>
	<main>
		<div class="group relative w-full min-h-screen flex items-center justify-center">
			<div class="absolute w-full h-full sm:min-h-screen -z-10">
				<WarpBackground
					color1="#09090b"
					color2="#27272a"
					color3="#52525b"
					speed={0.6}
					swirl={0.5}
					swirlIterations={10}
					shapeScale={0.3}
					client:load
				/>
			</div>

			<div class="p-4 sm:p-8 absolute w-full flex flex-col justify-between min-h-screen z-10">
				<div>
					<H1 size="large"> Александр <br /> Казаков </H1>
					<p class="text-zinc-400 text-xl sm:text-2xl mt-2 sm:mt-4">
						Unity Game Developer
					</p>
				</div>

				<div>
					<AvailableForWork className="py-4" />
					<div class="mb-2 sm:mb-4 flex items-center justify-between">
						<div class="flex items-center gap-4">
							<Link href="#">Связаться со мной</Link>
							<Link href="/projects" variant="secondary">
								Портфолио
							</Link>
						</div>

						<nav class="hidden sm:flex gap-4">
							<Link href="/blog" variant="secondary">Блог</Link>
							<Link href="/about" variant="secondary">Обо мне</Link>
							<Link href="/contact" variant="secondary">Контакты</Link>
						</nav>
					</div>
				</div>
			</div>
		</div>
	</main>
</RootLayout>
